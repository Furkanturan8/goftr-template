# Uygulama
APP_NAME=goftr-v1
APP_VERSION=1.0.0
APP_ENV=development
APP_PORT=3005
APP_SHUTDOWN_TIMEOUT=10
APP_LOG_DIR=./logs

# VeritabanÄ±
DB_HOST=localhost
DB_PORT=5432
DB_USER=your-username
DB_PASSWORD=your-password
DB_NAME=goftr
DB_SSLMODE=disable

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=5
REDIS_MAX_RETRIES=3
REDIS_RETRY_INTERVAL=100

# JWT
JWT_SECRET=your_jwt_secret_key
JWT_REFRESH_SECRET=your_refresh_secret_key
JWT_EXPIRATION=24
JWT_REFRESH_EXPIRATION=168

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_ENDPOINT=/metrics
PROMETHEUS_PORT=9090
PROMETHEUS_SCRAPE_INTERVAL=15s
PROMETHEUS_RETENTION_TIME=15d

# Grafana
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=your-admin-username
GRAFANA_ADMIN_PASSWORD=your-admin-password
GRAFANA_DASHBOARD_PATH=./monitoring/grafana/dashboards
GRAFANA_PROVISIONING_PATH=./monitoring/grafana/provisioning